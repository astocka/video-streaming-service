@model Ocean.Models.Video

@{
    ViewData["Title"] = "Video details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="jumbotron">
    <div class="row">
        <div class="col-lg-8 col-sm-8">
            <video class="w-100 h-100 border-light border" controls>
                <source src="../videos/TC.mp4" type="video/mp4">
                Your browser does not support the video tag.
            </video> <br>
        </div>
        <div class="col-lg-4 col-sm-4">
            <h1>@Model.Title</h1>
            <div class="mt-3">

                <h5>@Model.YearReleased</h5>
                <p>
                    @Model.Description
                </p>
                <div class="btn-group">
                    <button class="btn btn-info">Add to my list</button>
                </div>
                <div class="btn-group">
                    <a href="#"><img src="~/images/icons8-green-check-mark-48.png"/></a>
                    <a href="#"><img src="~/images/icons8-delete-48.png"/></a>
                </div>

                <div class="mt-2">
                    <strong>Cast:</strong>

                    @foreach (var actor in Model.ActorVideo)
                    {
                        if (actor.ActorId < Model.ActorVideo.Count)
                        {
                            <span>@actor.Actors.FirstName @actor.Actors.LastName, </span>
                        }
                        else
                        {
                            @actor.Actors.FirstName
                            @actor.Actors.LastName
                        }
                    }
                </div>
                <div class="mt-2">
                    <strong>Categories:</strong>

                    @foreach (var category in Model.CategoryVideo)
                    {
                        if (category.CategoryId < Model.CategoryVideo.Count)
                        {
                            <span>@category.Category.Name, </span>
                        }
                        else
                        {
                            @category.Category.Name
                        }
                    }
                </div>
            </div>
        </div>
    </div>
</div>
