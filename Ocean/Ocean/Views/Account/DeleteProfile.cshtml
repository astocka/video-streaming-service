@model Ocean.Models.UserProfile

@{
    ViewData["Title"] = "Delete Profile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row justify-content-center align-items-center">
    <div class="col-sm-2 col-md-2 col-lg-4">
        <div class="card border-light mb-2">
            <div class="card-header bg-light">
                <div class="display-4 text-dark text-center">Confirm delete profile</div>
            </div>
            <div class="card-body">
                
                <div class="col-lg-8 col-md-3 col-sm-1 m-auto">
                    <div class="card text-white bg-secondary">
                        <div class="card-body text-center">
                            <img src="~/@Model.ProfilePicture.FilePath" width="150" height="150" />
                            <h4 class="card-title mt-3">@Model.Name</h4>
                        </div>
                    </div>
                </div>
                
                <form class="form-signin text-left" asp-controller="Account" asp-action="ConfirmDeleteProfile" asp-route-id="@Model.UserProfileId" method="post">
                    <div class="mt-2">
                        <button class="btn btn-danger btn-block" type="submit">Delete</button>
                        <a class="btn btn-dark btn-block" asp-controller="Account" asp-action="ManageProfiles">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
