@model Ocean.Models.AppUser

@{
    ViewData["Title"] = "My Account";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="jumbotron">
    <h1>Account</h1>
    <hr />
    <div class="row">
        <div class="col-2">
            <div class="font-weight-bold h3">User settings</div>
        </div>
        <div class="col-3">
            <ul class="list-unstyled h4">
                <li><strong>Name:</strong> @Model.UserName</li>
                <li><strong>Email:</strong> @Model.Email</li>
            </ul>
            <div class="btn-group mt-3">
                <a class="btn btn-success btn-lg mr-2" asp-controller="Account" asp-action="ChangePassword" role="button">Change password</a>
                <a class="btn btn-danger btn-lg" href="#" role="button">Delete account</a>
            </div>
        </div>
    </div>
    <div class="row mt-5">
        <div class="col-2">
            <div class="font-weight-bold h3">My profile</div>
        </div>
        <div class="col-3">
            <img src="../@ViewData["Picture"].ToString()"  /> <span class="h3">@ViewData["ActiveProfile"]</span>
            <ul class="list-unstyled h4 mt-3">
                <li><a asp-controller="Account" asp-action="ProfileActivity" asp-route-id="@ViewData["ActiveProfileId"]">My activity</a></li>
                <li><a asp-controller="Account" asp-action="ProfileRatings" asp-route-id="@ViewData["ActiveProfileId"]">My ratings</a></li>
                <li class="mt-3"><a class="btn btn-info btn-lg" asp-controller="Account" asp-action="ManageProfiles" role="button">Manage profiles</a></li>
            </ul>
        </div>
    </div>
</div>
