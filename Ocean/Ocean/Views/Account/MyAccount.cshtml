@model Ocean.Models.AppUser

@{
    ViewData["Title"] = "My Account";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="jumbotron">
    <h1 class="display-3">
        Hello,
        @if (User.IsInRole("User"))
        {
            <span class="font-weight-bold">@Model.UserName</span><span>!</span>
        }
        else
        {
            <span>Hello Stranger!</span>
        }
    </h1>
    <hr class="my-4">
    @if (User.IsInRole("User"))
    {
        <img src="../@ViewData["Picture"].ToString()" class="float-left mr-4" />

        <div class="font-weight-bold h3">User settings</div>
        <ul class="list-unstyled">
            <li><strong>Name:</strong> @Model.UserName</li>
            <li><strong>Email:</strong> @Model.Email</li>
        </ul>
    }
        <p class="lead">
            <a class="btn btn-success btn-lg" asp-controller="Account" asp-action="ChangePassword" role="button">Change password</a>
        </p>
</div>
